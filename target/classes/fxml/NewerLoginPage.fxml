<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="NewerLoginPage" maxHeight="1080.0" maxWidth="1920.0" minHeight="400" minWidth="500" prefHeight="800"
            prefWidth="1020" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NewerLoginPageController">
    <children>
        <Label id="NewerLoginPage" layoutX="373.0" layoutY="181.0" text="Login">
            <font>
                <Font name="Stencil" size="96.0"/>
            </font>
        </Label>
        <TextField fx:id="username" layoutX="324.0" layoutY="427.0" promptText="Username"/>
        <TextField fx:id="password" layoutX="324.0" layoutY="557.0" prefHeight="65.0" prefWidth="373.0"
                   promptText="Password"/>

        <Button fx:id="exit" onMouseClicked="#exit" layoutX="785.0" layoutY="14.0" prefHeight="68.0" prefWidth="221.0" text="EXIT--&gt;"
                textFill="WHITE">
            <effect>
                <DropShadow height="255.0" radius="127.0" spread="0.5" width="255.0"/>
            </effect>
            <font>
                <Font name="Stencil" size="36.0"/>
            </font>
        </Button>
        <Button id="NewerLogin" layoutX="435.0" layoutY="681.0" mnemonicParsing="false" onMouseClicked="#loginUser"
                text="Login">
            <font>
                <Font name="Stencil" size="36.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
